{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      "**/*.proto",
      { "include": "custom/i18n/**/*", "watchAssets": true }
    ],
    "watchAssets": true
  }
}
